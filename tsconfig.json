{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["es2019", "dom"],
    "noUnusedLocals": true,
    "rootDirs": ["./src"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "target": "es2019",
    "jsx": "react"
  },
  "include": ["src/**/*", "examples/**/*", "__tests__/**/*.ts"],
  "exclude": ["src/**/*.gen.tsx"]
}
